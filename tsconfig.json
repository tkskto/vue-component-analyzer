{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext", "WebWorker"],
    "module": "ESNext",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "test",
    "node_modules"
  ]
}
